@model IEnumerable<TestWAT.Models.Personne>

@{
    ViewData["Title"] = "ListPersonnes";
}

<h1>Liste des Personnes</h1>

<p class="justify-content-center">
    <a asp-action="Create">Creer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateDeNaissance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateDeNaissance)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PersonneId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PersonneId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PersonneId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
